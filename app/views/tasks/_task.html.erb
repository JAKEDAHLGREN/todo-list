<div>
<div id="<%= dom_id task%>" class='tasks-container'>
  <p class="my-5">
    <strong class="block font-medium mb-1 text-blue-600">Name:</strong>
    <%= task.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1 text-blue-600">Due date:</strong>
    <%= task.due_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1 text-red-600">Priority:</strong>
    <%= task.priority %>
  </p>  
</div>
  <% if action_name != "show" %>
    <%= link_to "Show task", task, class: "rounded-lg py-3 px-5 inline-block font-medium text-white bg-blue-600" %>
    <%= link_to "Edit task", edit_task_path(task), class: "rounded-lg py-3 ml-2 px-5 inline-block font-medium text-white bg-blue-600" %>
    <hr class="mt-6">
  <% end %>
</div>
